{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "name": "Custom Youtube Playlist Duration Calculator",
  "short_name": "CYTPD Calc",
  "description": "An extension to calculate & display the total duration of a youtube playlist.",
  "default_locale": "en",
  "version": "2.2.0",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "{{chrome}}.action": {
    "default_icon": {
      "16": "icon16.png"
    },
    "default_title": "YTPD Calculator"
  },
  "{{firefox}}.browser_action": {
    "default_icon": "icon16.png",
    "default_title": "YTPD Calculator"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": ["src/main.js"]
    }
  ],
  "{{chrome}}.host_permissions": ["https://www.youtube.com/*"],
  "{{firefox}}.permissions": ["https://www.youtube.com/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "will0912@CYTPD_Calculator"
    }
  }
}
